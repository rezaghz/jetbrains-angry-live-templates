        <defaultLiveTemplates file="/liveTemplates/persianLiveTemplates.xml"/>
        <defaultLiveTemplates file="/liveTemplates/englishLiveTemplates.xml"/>
        <liveTemplateContext implementation="com.rezaghz.liveTemplates.AllFileContext"/>
        <liveTemplateContext implementation="com.rezaghz.liveTemplates.JavaScriptContext"/>
        <liveTemplateContext implementation="com.rezaghz.liveTemplates.PhpContext"/>
        <liveTemplateContext implementation="com.rezaghz.liveTemplates.LaravelContext"/>
    </extensions>

